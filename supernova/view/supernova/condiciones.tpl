          <div class="spacing-3"></div>
          <input type="text" id="email" class="form-control" name="name" placeholder="Correo electrónico">
        </div>

        <div class="col-xs-4">
          <button type="button" class="btn btn-primary solicitud" name="button">Solicitar</button>
        </div>
      </div>

